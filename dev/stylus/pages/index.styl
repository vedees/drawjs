/* Main */
#app
	display flex
	align-items center
	flex-direction column
	padding 10px 20px

canvas
	width 100%
	background-color canvasBgColor
	margin-bottom 12px
	
button
	background-color: #4a90e2;
	color: whiteColor
	padding 10px 18px

/* Color Palette */
#color-palette
	display flex
	min-height 54px

.color-palette__color
	height 32px
	width 32px
	border-radius 60px
	cursor pointer
	margin-right 10px
	
	&:last-child
		margin-right 0
		
.color-palette__color
		&.selected
				width 40px
				height 40px

/* Color Picker */
#color-picker
		background #fff
		border-radius 5px
		clear both
		margin 20px 0 0
		padding 10px
		width 305px
		position relative
		display none
		&:after
				bottom 100%
				left 24px
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				border-color rgba(255, 255, 255, 0)
				border-bottom-color #fff
				border-width 10px
				margin-left -10px

.color-picker__preview
		width 80px
		height 80px
		background-color #000
		border-radius 3px
		box-shadow none
		float left
		border none
		margin 10px 20px 20px 10px

.color-picker__sliders
		float right
		label
				margin 8px 0
				vertical-align middle
				display block
				margin 0 10px 0 0
				font-size 14px
				color #6D574E
		input
				position relative
				top 2px

.color-picker__controls
		clear both
		display flex
		justify-content space-between

